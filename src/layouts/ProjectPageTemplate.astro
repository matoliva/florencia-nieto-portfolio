---
import Layout from '../layouts/Layout.astro';
import LightBox from '../components/LightBox.astro';
import type { IProject } from '../models/interfaces';

interface Props {
  project: IProject;
}

const { project } = Astro.props;

const { imageGallery } = project;
---

<Layout title={project.title}>
  <div class='project-header'>
    <div class='project-header__title'>
      <h1>{project.title}</h1>
      <p>{project.description}</p>
    </div>
    <div class='project-header__img'>
      <img src={project.headerImage} alt='profesional profile photo' width='250' />
    </div>
  </div>
  <LightBox {imageGallery} />
</Layout>
<style>
  .project-header {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    gap: 3rem;
    margin-top: 4rem;
    margin-bottom: 3rem;
  }

  .project-header__title {
    width: 50%;
  }

  .project-header__title h1 {
    margin-bottom: 1rem;
  }

  .project-header__img img {
    border-top-left-radius: 33%;
    overflow: hidden;
    object-fit: cover;
    object-position: center;
    height: 300px;
  }

  .project-header p {
    text-align: justify;
  }

  @media (max-width: 768px) {
    .project-header {
      flex-direction: column;
    }
    .project-header__title {
      width: 100%;
    }
  }
</style>
