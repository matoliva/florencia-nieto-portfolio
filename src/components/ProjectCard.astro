---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

interface Props {
  img: string;
  width: number;
  height: number;
  href: string;
  linkText: string;
}

const { img, width, height, href, linkText } = Astro.props;
---

<div class='card'>
  <a class='card__img' href='#'>
    <Image src={img} alt='Project' {width} {height} />
  </a>
  <div class='card__link'>
    <h2><a {href}>{linkText}</a></h2>
  </div>
</div>
<style>
  .card {
    position: relative;
  }

  .card:hover {
    filter: grayscale(100%);
    cursor: pointer;
  }

  .card__img img {
    height: 100%;
    width: 100%;
    object-fit: cover;
  }

  .card__link {
    position: absolute;
    bottom: 0;
    width: 100%;
    padding: 2rem;
    z-index: var(--z-popover: 1070;);
  }

  .card__link h2 {
    font-size: 2.5rem;
  }

  .card__link a {
    text-decoration: none;
    color: var(--text-color);
  }

  .card__link a:hover {
    text-decoration-line: underline;
  }
</style>
