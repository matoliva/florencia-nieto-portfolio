---
import Toggle from './ThemeChange.astro';
---

<header>
  <div class='logo'><h2>Florencia Nieto</h2></div>
  <Toggle />
</header>
<style>
  header {
    position: sticky;
    top: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to bottom, var(--color-bg-header-first), var(--color-bg));
    backdrop-filter: blur(12px);
    z-index: 1000;
    padding: 0.5rem 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index: 1000;
  }

  .logo {
    font-size: 1.5rem;
    font-weight: bold;
  }
</style>
