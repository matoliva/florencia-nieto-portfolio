---
import { Image } from 'astro:assets';

import aboutMe from '../assets/aboutMe.webp';
---

<section class='introduction'>
  <div class='introduction__description'>
    <h1>Florencia Nieto</h1>
    <h2>Interior designer</h2>
  </div>
  <div class='introduction__img'>
    <Image src={aboutMe} alt='profesional profile photo' width={400} />
  </div>
</section>
<style>
  .introduction {
    display: flex;
    align-items: center;
    text-align: center;
    justify-content: center;
    gap: 4rem;
    margin-top: 3rem;
  }

  .introduction__description h1 {
    font-size: 3rem;
    font-weight: 400;
  }

  .introduction__description h2 {
    font-size: 2rem;
    font-weight: 400;
  }

  .introduction__img {
  }

  .introduction img {
    height: 400px;
    border-top-left-radius: 40%;
    overflow: hidden;
    object-fit: cover;
    object-position: center top;
  }

  @media (max-width: 768px) {
    .introduction {
      display: flex;
      flex-direction: column;
      flex-flow: column-reverse;
      align-items: center;
      margin-top: 2rem;
    }

    .introduction__description {
      flex: 1;
      order: 2;
    }

    .introduction__img {
      flex: 1;
      order: 2;
    }

    .introduction__title {
      flex: 1;
      order: 3;
    }

    .introduction img {
      width: 250px;
      height: 250px;
    }

    .introduction__description h1 {
      font-size: 2rem;
    }

    .introduction__description h2 {
      font-size: 1.5rem;
    }
  }
</style>
