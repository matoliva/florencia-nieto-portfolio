const photos = project.imageGallery.map(img => {
  return { src: img, alt: project.title, width: 700, height: 700 };
});
---

<Layout title={project.title}>
  <div class='project-header'>
    <h1>{project.title}</h1>
    <p>{project.description}</p>
  </div>
  <LightBox {photos} />
</Layout>
<style>
  .project-header {
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    margin-top: 4rem;
    gap: 1rem;
  }

  .project-header p {
    width: 50%;
    padding: 1rem;
  }

  @media (max-width: 768px) {
    .project-header p {
      width: 100%;
    }
  }
</style>
