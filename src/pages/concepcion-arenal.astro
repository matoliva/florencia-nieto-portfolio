---
import Layout from '../layouts/Layout.astro';
import LightBox from '../components/LightBox.astro';

const project = {
  title: 'Concepcion Arenal',
  description:
    "This renovation transformed the ground floor into a stylish and functional space that seamlessly blends contemporary design with the couple's love for wine and entertainment. Custom furniture, neutral tones, and strategic lighting elevate the home's aesthetic, while the reconfigured layout enhances flow and connection to the outdoors.",
  cover: [
    'https://res.cloudinary.com/dgxp6vwij/image/upload/v1654633708/Almafuerte/DSC_0038_zapujw.jpg',
  ],
  imageGallery: [],
};

const photos = project.imageGallery.map(img => {
  return { src: img, alt: project.title, width: 700, height: 700 };
});
---

<Layout title={project.title}>
  <div class='project-header'>
    <h1>{project.title}</h1>
    <p>{project.description}</p>
  </div>
  <LightBox {photos} />
</Layout>
<style>
  .project-header {
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    margin-top: 4rem;
    gap: 1rem;
  }

  .project-header p {
    width: 50%;
    padding: 1rem;
  }

  @media (max-width: 768px) {
    .project-header p {
      width: 100%;
    }
  }
</style>
